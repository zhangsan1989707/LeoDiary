<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 中文环境下的应用主题 -->
    <style name="Theme.LeoDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorTextPrimary</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/colorCardBackground</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <!-- Error color. -->
        <item name="colorError">@color/colorDelete</item>
        <item name="colorOnError">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- 其他中文环境下的样式定义 -->
    <style name="DiaryCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="DiaryEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">@color/colorCardBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:hintTextColor">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorFabBackground</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="size">normal</item>
    </style>

    <style name="DiaryTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DiaryContentText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="DiaryDateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
</resources>